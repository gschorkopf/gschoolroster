<p id="notice"><%= notice %></p>

<div class="span3">
  <%= gravatar_image_tag( @profile.email, alt: @profile.name , class: 'img-rounded', gravatar: { size: 300 }) %>  
</div>
<div class="span5">
  <%= link_to 'Edit', edit_profile_path(@profile), class:"btn btn-mini" %>  
  <h1><b><%= @profile.name %></b></h1>

  <a href="https://twitter.com/<%= @profile.twitter %>" class="twitter-follow-button" data-show-count="true" data-size="large" data-lang="en">Follow @<%= @profile.twitter %></a>

<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

<% unless @profile.github == "" %>
<a href="https://github.com/<%= @profile.github %>" class="github-follow-button">Follow On GitHub</a>
<script type="text/javascript" src="http://octophile.com/widgets.js"></script>
<% end %>


<p class="lead"><%= fancy_web_link(@profile.blog) %></p>
</div>

