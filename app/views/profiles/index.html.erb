<div class="container">
  <div class="row"><hr></div>
  <% @profiles.each do |profile| %>
      <div class="span3">
        <div class="container">
          <p class="lead">
            <%= link_to profile.name, "https://twitter.com/intent/user?screen_name=#{profile.twitter}" %>
          </p>
          <%= link_to gravatar_image_tag(profile.email, class: "img-circle pull-left"), "https://twitter.com/intent/user?screen_name=#{profile.twitter}" %>
        </div>
        <% if user_signed_in? %>
            <div>
              <ul class="nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contact Info <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li>Twitter:<%= "<a href='https://twitter.com/intent/user?screen_name=#{profile.twitter}'>#{profile.twitter}</a>".html_safe %></li>
                    <% if profile.phone != "" %>
                        <li><abbr title="">P:</abbr><a href="tel:<%= profile.phone %>"><%= hidden_phone(profile.phone) %></a></li>
                    <% end %>
                    <% if profile.email != "" %>
                        <li>email:<a href="mailto:<%= profile.email %>"><%= hidden_email(profile.email) %></a></li>
                    <% end %>
                    <% if profile.github != "" %>
                        <li>github:
                          <%= fancy_github_link(profile.github) %></li>
                    <% end %>
                    <% if profile.linkedin %>
                        <li>linkedin:<script type="IN/MemberProfile" data-id="<%= profile.linkedin %>" data-format="hover" data-text="<%= profile.name %>" data-related="false"></script>
                        </li>
                    <% end %>
                    <% if profile.text_editor != "" %>
                        <li><%= profile.text_editor %> fo' life</li>
                    <% end %>
                    <li class="divider"></li>
                    <li class="nav-header">Update:</li>
                    <li><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    <li><%= link_to 'Edit', edit_profile_path(profile) %></li>
                  </ul>
                </li>
              </ul>
            </div>
        <% else %>
            <p>Sign in to see their info.</p>
        <% end %>

      </div>
  <% end %>
</div>
