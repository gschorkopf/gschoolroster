<div class="container">
  <div class="row"><hr></div>
  <% @profiles.each do |profile| %>
    <div class="span3">
      <div class="container">
        <p class="lead">
          <%= link_to profile.name, profile %>
          </p>
          <%= link_to gravatar_image_tag(profile.email, 
          class: "img-circle pull-left"), 
            "https://twitter.com/intent/user?screen_name=#{profile.twitter}" %>
      </div>
      <div>
        <ul class="nav">
          <% unless profile.phone == "" %>
            <i class='icon-bookmark'></i><%= fancy_web_link(profile.phone) %>
          <% end %>



          <% if profile.twitter %>
            <li>
              <%= fancy_twitter_link(profile.twitter) %>
            </li>            
          <% end %>  
          <% if profile.github != "" %>
              <li><%= fancy_github_link(profile.github) %></li>
          <% end %>
          <% if profile.linkedin %>
            <li>
              <script type="IN/MemberProfile" data-id="<%= profile.linkedin %>" data-format="hover" data-text="<%= profile.name %>" data-related="false"></script>
            </li>
          <% end %>
          <% if user_signed_in? %>
          <li class="divider"></li>
          <li class="nav-header">Update:</li>
          <li><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          <li><%= link_to 'Edit', edit_profile_path(profile) %></li>
          <% else %>
            <p>Sign in to delete</p>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
