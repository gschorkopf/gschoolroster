<div class="navbar-wrapper">
  <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
    <div class="navbar navbar-fixed-top">
      <div class="container">
        <h1><%= link_to "gSchoolRoster", root_path %><small> find someone</small></h1>
      <% if user_signed_in? %>
          <p class="lead">Signed in as <%= current_user.email %>,
            <%= link_to "add yourself to the roster", new_profile_path %> ... or
            <%= link_to "sign out?", destroy_user_session_path, :method => :delete %>
          </p>
      <% else %>
          <p class="lead">
            You're not signed in. <%= link_to "Sign Up", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %>
          </p>
      <% end %>
    </div>
  </div> <!-- /.container -->
</div><!-- /.navbar-wrapper -->